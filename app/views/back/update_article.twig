<form action="/dashboard/update/{{ article.id }}" method="POST">
    <div class="mb-4">
        <label for="title" class="block text-gray-300">Titre</label>
        <input type="text" id="title" name="title" value="{{ article.title }}" class="w-full px-4 py-2 rounded-lg bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-yellow-400" required>
    </div>

    <div class="mb-4">
        <label for="description" class="block text-gray-300">Description</label>
        <textarea id="description" name="description" rows="4" class="w-full px-4 py-2 rounded-lg bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-yellow-400" required>{{ article.content }}</textarea>
    </div>

    <div class="flex justify-center gap-4">
        <button type="button" onclick="toggleModal()" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-400">Annuler</button>
        <button type="submit" class="bg-yellow-500 text-gray-900 px-6 py-2 rounded-lg hover:bg-yellow-400 focus:outline-none focus:ring-2 focus:ring-yellow-400">Modifier</button>
    </div>
</form>
